<form action= <%= invitations_url %> method="POST">
    <input type="hidden" name="_method" value="PUT">
    <label>First Name
        <input type="text" name="invitation[first_name]" value=" <%=@invitation.first_name%> " >
    </label>
    <label>Last Name
        <input type="text" name="invitation[last_name]" value=" <%=@invitation.last_name%> " >
    </label>
    <label>Email
        <input type="text" name="invitation[email]" value=" <%=@invitation.email%> " >
    </label>

    <button type="submit">Update Invitation</button>

</form>